@model IEnumerable<WebAppHerb.Models.Infographic>

@{
    ViewBag.Title = "Infograhpic - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br><br>
<h2>Infograhpic</h2>

<p class="btn btn-default">
    @Html.ActionLink("Add", "Create")
</p>
<table class="table table-bordered">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.infographicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InfographicReference)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.infographicImage)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="success">
            <td>
                @Html.DisplayFor(modelItem => item.infographicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfographicReference)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.infographicImage)" width="200" height="250" />
            </td>
            <td>
                <p class="btn btn-default">
                    @Html.ActionLink("Update", "Edit", new { id = item.infographicID })
                </p>
            </td>
            <td>
                <p class="btn btn-default">
                    @Html.ActionLink("Delete", "Delete", new { id = item.infographicID })
                </p>
            </td>
        </tr>
    }

</table>
