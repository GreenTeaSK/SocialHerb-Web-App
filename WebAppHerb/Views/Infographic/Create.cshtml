@model WebAppHerb.Models.Infographic

@{
    ViewBag.Title = "Infograhpic Add - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br><br>
<h2>Add</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Infographic</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.infographicID, new { @class = "control-label col-md-2" })
