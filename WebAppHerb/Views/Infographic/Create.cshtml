                @Html.TextBoxFor(model => model.infographicID, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.infographicID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.infographicName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.infographicName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.infographicName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InfographicReference, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.InfographicReference, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InfographicReference)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.infographicImage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.infographicImage, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.infographicImage)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

