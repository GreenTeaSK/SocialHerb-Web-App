@model IEnumerable<WebAppHerb.Models.Disease>

@{
    ViewBag.Title = "Disease - ";
}
<br><br>
<h2>อาการ/โรค</h2>

<p class="btn btn-default">
    @Html.ActionLink("Add", "Create")
</p>
<table class="table table-bordered">
    <tr class="active">
        <th>
            @Html.DisplayNameFor(model => model.diseaseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.syntom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.herbID)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
{
    <tr class="success">
        <td>
            @Html.DisplayFor(modelItem => item.diseaseName)
        </td>
        <td>
            <pre>@Html.DisplayFor(modelItem => item.syntom)</pre>
        </td>
        <td>
            <pre>@Html.DisplayFor(modelItem => item.herbID)</pre>
        </td>
        <td>
            <p class="btn btn-default">
                @Html.ActionLink("Update", "Edit", new { id = item.diseaseID })
            </p>
        </td>
        <td>
            <p class="btn btn-default">
                @Html.ActionLink("Delete", "Delete", new { id = item.diseaseID })
            </p>
        </td>
    </tr>
}

</table>
