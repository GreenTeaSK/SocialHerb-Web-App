<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Social Herb</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .carousel-inner > .item > img,
        .carousel-inner > .item > a > img {
            position: relative;
            width: 100%;
            height: auto;
            margin: 0px;
        }

        #myCarousel {
            width: auto;
            height: auto;
            padding: 0px;
            margin: 0px;
        }

        #con {
            margin-top: 50px;
        }

        #im {
            width: 100%;
            height: 100%;
            padding: 2px;
            margin: 5px;
        }

        .navbar-default {
            background-color: #228B22;
            border-color: #E7E7E7;
        }

            .navbar-default .navbar-nav > li > a {
                color: #fff;
            }

            .navbar-default .navbar-brand {
                color: #ffffff;
            }

        .navbar-right {
            color: #fff;
        }

        .login {
            background-image: url(https://www.img.in.th/images/f936cecc08508192a191911efad786b2.jpg);
        }

        #head {
            font-size: 30px;
            font-style: inherit;
        }

        .btn .button {
            border-color: #E7E7E7;
            color: #fff;
        }

        .dl-horizontal {
            background-image: url(http://upic.me/i/gk/27untitled1.jpg);
        }
    </style>
</head>
<body style="background-image: url(http://i.istockimg.com/file_thumbview_approve/20702365/3/stock-photo-20702365-old-white-wooden-board-background.jpg); background-attachment: fixed; padding: 0px">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Social Herb", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("สมุนไพร", "Index", "Herb")</li>
                    <li>@Html.ActionLink("อาการ/โรค", "Index", "Disease")</li>
                    <li>@Html.ActionLink("บทความเพื่อสุขภาพ", "Index", "Article")</li>
                    <li>@Html.ActionLink("Infographic", "Index", "Infographic")</li>

                </ul>
                <div class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>